        <script>
          document.addEventListener("DOMContentLoaded", function () {
              const filters = document.querySelectorAll(".faq-filter");
              const faqItems = document.querySelectorAll(".faq-item");
        
              // Comportamiento tipo "radio"
              filters.forEach(filter => {
                  filter.addEventListener("change", function () {
                      // Si se activó, desactiva los demás
                      if (this.checked) {
                          filters.forEach(f => {
                              if (f !== this) {
                                  f.checked = false;
                                  f.closest(".item-filter").classList.remove("on");
                              }
                          });
                      }
        
                      // Toggle clase visual
                      filters.forEach(f => {
                          const parent = f.closest(".item-filter");
                          parent.classList.toggle("on", f.checked);
                      });
        
                      // Filtrar FAQs
                      const active = this.checked ? this.value : null;
        
                      faqItems.forEach(item => {
                          const category = item.getAttribute("data-category");
                          if (!active || category === active) {
                              item.style.display = "block";
                          } else {
                              item.style.display = "none";
                          }
                      });
                  });
              });
        
              // Inicial
              faqItems.forEach(item => item.style.display = "block");
          });
